  // HTML5 feed with URL patterns for multiple categories
  {
    "Name": "Ingenieur.de {pattern}",
    "Url": "https://www.ingenieur.de/technik/fachbereiche/{pattern}/",
    "Description": "Engineering News - {pattern}",
    "Type": "html5",
    "UrlPatterns": ["bau", "ittk", "3d-druck"],
    "PatternNames": {
      "bau": "Construction",
      "ittk": "IT & Communication",
      "3d-druck": "3D Printing"
    },
    "HtmlConfig": {
      "ItemsSelector": "div.ing-teaser",
      "Title": {
        "Selector": "p.ing-teaser__headline",
        "Extractor": "text"
      },
      "Link": {
        "Selector": "a.ing-teaser__link",
        "Extractor": "href"
      },
      "Description": {
        "Selector": "span.ing-teaser__subheadline",
        "Extractor": "text"
      },
      "PublishedAt": {
        "Selector": "span.ing-teaser__meta-item",
        "Extractor": "text"
      },
      "Category": {
        "Selector": "span.ing-teaser__category",
        "Extractor": "text"
      }
    }
  }
]
